@model UploadViewModel
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <form asp-action="Index" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
    <h4>upload your cringe song loser.</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UploadTitle" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="UploadTitle" class="form-control" />
            <span asp-validation-for="UploadTitle" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="UploadAuthor" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="UploadAuthor" class="form-control" />
            <span asp-validation-for="UploadAuthor" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="UploadFile" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="UploadFile" type="file">
            <span asp-validation-for="UploadFile"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Complete upload" />
        </div>
    </div>
    

</form>
</body>